<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.Main.Tasker.Main"
    tools:showIn="@layout/activity_main">

    <TextView
        android:id="@+id/this_is_id_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#F00"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/launch_settings"
        android:layout_alignBaseline="@+id/launch_help"
        android:layout_alignBottom="@+id/launch_help"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:onClick="Settings"
        android:text="Settings" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="help"
        android:id="@+id/launch_help"
        android:layout_marginBottom="49dp"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/this_is_id_name"
        android:layout_toEndOf="@+id/this_is_id_name"
        android:onClick="Help" />

    <TextView
        android:id="@+id/InstallLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/this_is_id_name"
        android:layout_centerHorizontal="true"
        android:text="Click &apos;create&apos; to get the folder location" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Add"
        android:layout_alignBaseline="@+id/launch_settings"
        android:layout_alignBottom="@+id/launch_settings"
        android:layout_centerHorizontal="true"
        android:text="create" />
</RelativeLayout>
